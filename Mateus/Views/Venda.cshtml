@using Mateus.Models
@model VendaViewModel


@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
          asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <style>
        tr {
            page-break-inside: avoid !important;
        }
    </style>
</head>

<body style="padding:16px;">
    <form class="form-horizontal" role="form">


        <p>Estoque completo</p>

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="tbAtividades">
                    <thead>
                        <tr>
                            <th class="text-center">Produto</th>
                            <th class="text-center">Filial</th>
                            <th class="text-center">Quantidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Estoque.Count() > 0)
    {
        for (int i = 0; i < Model.Estoque.Count; i++)
        {

            var item = Model.Estoque.ElementAt(i);

                    <tr class="tableRow">
                        <td>
                            @item.NomeProduto

                            <input name="Estoque[@i].Id" type="hidden" value="@item.Id" />


                        </td>
                        <td>
                            @item.NomeFilial

                        </td>
                        <td>
                            @item.QntProduto

                        </td>

                    </tr>
}

}
                    </tbody>
                </table>
            </div>
        </div>

        <p>Itens do estoque que foram alterados</p>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="tbAtividades">
                    <thead>
                        <tr>
                            <th class="text-center">Produto</th>
                            <th class="text-center">Filial</th>
                            <th class="text-center">Quantidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.EstoqueAtualizado.Count() > 0)
    {
        for (int i = 0; i < Model.EstoqueAtualizado.Count; i++)
        {

            var item = Model.EstoqueAtualizado.ElementAt(i);

                    <tr class="tableRow">
                        <td>
                            @item.NomeProduto

                            <input name="EstoqueAtualizado[@i].Id" type="hidden" value="@item.Id" />


                        </td>
                        <td>
                            @item.NomeFilial

                        </td>
                        <td>
                            @item.QntProduto

                        </td>

                    </tr>
}

}
                    </tbody>
                </table>
            </div>
        </div>


    </form>













</body>
</html> 