@using Mateus.Models
@model VendaViewModel

@{
    Layout = "_Layout";
}

@using (Html.BeginForm())

{
    <form class="form-horizontal" role="form">



        <div id="participantes" class="tab-pane fade">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="tbAtividades">
                        <thead>
                            <tr>
                                <th class="text-center">Produto</th>
                                <th class="text-center">Valor</th>
                           </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListaProduto.Count() > 0)
                    {
                        for (int i = 0; i < Model.ListaProduto.Count; i++)
                        {

                            var item = Model.ListaProduto.ElementAt(i);

                            <tr class="tableRow">
                                <td>
                                    @item.Produto

                                    <input name="ListaParticipantes[@i].Id" type="hidden" value="@item.Id" />
                                    <input name="ListaParticipantes[@i].Documento" type="hidden" value="@item.Produto" />
                                    <input name="ListaParticipantes[@i].Nome" type="hidden" value="@item.Valor" />

                                </td>
                                <td>
                                    @item.Valor
                                </td>

                            </tr>
                }

            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        </form>






}